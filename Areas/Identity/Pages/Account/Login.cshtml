@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<body class="login">
    <div class="container px-sm-10">
        <div class="grid columns-2 gap-4">
            <!-- BEGIN: Login Form -->
            <div class="g-col-2 g-col-xl-1 h-screen h-xl-auto d-flex py-5 py-xl-0 my-10 my-xl-0">
                <div class="my-auto mx-auto ms-xl-20 bg-white dark-bg-dark-1 bg-xl-transparent px-5 px-sm-8 py-8 p-xl-0 rounded-2 shadow-md shadow-xl-none w-full w-sm-3/4 w-lg-2/4 w-xl-auto">
                    <h2 class="intro-x fw-bold fs-2xl fs-xl-3xl text-center text-xl-start">
                        Sign In
                    </h2>
                    <form id="account" method="post" class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row row-cols-1 g-2 pb-5">
                            <div class="col-lg-6 col-md-12 col-12">
                                <div class="form-group">
                                    <label asp-for="Input.Email">UserName</label>
                                    <input asp-for="Input.Email" autocomplete="username" type="text">
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-12 col-12">
                                <div class="form-group">
                                    <label asp-for="Input.Password" autocomplete="current-password" aria-required="true">Password</label>
                                    <input asp-for="Input.Password" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <button type="submit" class="axil-button button-rounded btn-primary">Log in</button>
                            </div>
                        </div>
                    </form>
                    <div class="intro-x mt-10 mt-xl-24 text-gray-700 dark-text-gray-600 text-center text-xl-start">
                        By signin up, you agree to our
                        <br>
                        <a class="text-theme-17 dark-text-gray-300" href="">Terms and Conditions</a> & <a class="text-theme-17 dark-text-gray-300" href="">Privacy Policy</a>
                    </div>
                </div>
            </div>
            <!-- END: Login Form -->
        </div>
    </div>
    <!-- BEGIN: Dark Mode Switcher-->
    <div data-url="login-dark-login.html" class="dark-mode-switcher cursor-pointer shadow-md position-fixed bottom-0 end-0 box dark-bg-dark-2 border rounded-pill w-40 h-12 d-flex align-items-center justify-content-center z-50 mb-10 me-10">
        <div class="me-4 text-gray-700 dark-text-gray-300">Dark Mode</div>
        <div class="dark-mode-switcher__toggle border"></div>
    </div>
    <!-- END: Dark Mode Switcher-->
    <!-- BEGIN: JS Assets-->
    <script src="dist/js/app.js"></script>
    <!-- END: JS Assets-->
</body>



